{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "lib",
		"baseUrl": "."
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
